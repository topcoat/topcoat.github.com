!!! 5
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
        != getBlock('meta').toHTML()
        title
            block title
                = document.title
        link(rel="stylesheet", href="/css/normalize.css", type="text/css", media="screen")
        link(rel="stylesheet", href="/css/style.css", type="text/css", media="screen")
        != getBlock('styles').toHTML()
        script(type="text/javascript", src="//use.typekit.net/czf5rrh.js")
        script(type="text/javascript").
            try{Typekit.load();}catch(e){}
    body
        #wrapper
            header
                h1: a(href="/") Topcoat
                p= site.description

                nav: ul
                        li: a(href="http://topcoat.io/topcoat") Demo
                        li: a(href="http://bench.topcoat.io") Benchmarks
                        li: a(href="/blog") Blog
                        li.download: a.topcoat-button--cta(href="https://github.com/topcoat/topcoat/archive/0.6.0.zip", onClick="_gaq.push(['_trackEvent', 'download', 'click',,, false]);") Download version 0.6.0
            != content
        footer.site
            ul
                li#twitter: a(href="http://twitter.com/topcoat")
                li#github: a(href="http://github.com/topcoat")
                li#adobe: a(href="http://html.adobe.com")
        != getBlock('scripts').toHTML()
        != partial('analytics')
